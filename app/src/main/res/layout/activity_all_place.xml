<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AllPlaceActivity">

    <TextView
        android:id="@+id/semuaTempatTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seluruh_tempat_txt"
        android:textColor="@color/main_theme"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAllPlace"
        android:layout_width="362dp"
        android:layout_height="594dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semuaTempatTxt"
        app:layout_constraintVertical_bias="0.692"
        tools:listitem="@layout/item_row_populer"/>

</androidx.constraintlayout.widget.ConstraintLayout>