<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingFragment">

    <TextView
        android:id="@+id/textViewSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pengaturan"
        android:textAlignment="center"
        android:textColor="@color/main_theme"
        android:textStyle="bold"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDetailAkun"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Detail Akun"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/main_theme"
        app:layout_constraintTop_toBottomOf="@id/textViewSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgSectionDetailAkun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_section_setting_detail_acc"
        app:layout_constraintTop_toBottomOf="@id/textViewDetailAkun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/settingName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_text_item"
            android:text="Budi Pengguna"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/main_theme"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/settingEmail"
            app:drawableStartCompat="@drawable/ic_baseline_person_24"/>

        <TextView
            android:id="@+id/settingEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_text_item"
            android:text="budi.pengguna@gmail.com"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/main_theme"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            app:layout_constraintTop_toBottomOf="@id/settingName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:drawableStartCompat="@drawable/ic_baseline_alternate_email_24"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewMainSetting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Pengaturan"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/main_theme"
        app:layout_constraintTop_toBottomOf="@id/bgSectionDetailAkun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgSectionSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_section_setting_detail_acc"
        app:layout_constraintTop_toBottomOf="@id/textViewMainSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/bt_theme_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/bg_text_item"
            android:text="Ganti Tema"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/main_theme"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bt_language"
            app:drawableStartCompat="@drawable/ic_baseline_dark_mode_24"/>

        <TextView
            android:id="@+id/bt_language"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_text_item"
            android:text="Bahasa"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/main_theme"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:drawablePadding="20dp"
            android:gravity="center|start"
            app:layout_constraintTop_toBottomOf="@id/bt_theme_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:drawableStartCompat="@drawable/ic_baseline_language_24"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/bt_logout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_logout_item"
        android:text="Logout"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bgSectionSetting"/>
</androidx.constraintlayout.widget.ConstraintLayout>