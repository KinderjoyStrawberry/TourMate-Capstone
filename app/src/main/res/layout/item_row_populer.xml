<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="373dp"
            android:layout_height="179dp"
            android:scaleType="center"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/detail_img" />

        <TextView
            android:id="@+id/destiname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="4dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.053"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="0.649"
            tools:text="@string/destinationName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="@+id/destiname"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="@+id/destiname"
            card_view:layout_constraintTop_toBottomOf="@+id/destiname"
            card_view:layout_constraintVertical_bias="0.263"
            tools:text="@string/location" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:fabSize="normal"
            android:layout_marginStart="60dp"
            android:contentDescription="@string/title_bookmark"
            android:foregroundGravity="bottom"
            android:src="@drawable/ic_baseline_bookmark_24"
            card_view:layout_constraintBottom_toBottomOf="@+id/destiname"
            card_view:layout_constraintEnd_toEndOf="@+id/imageView"
            card_view:layout_constraintHorizontal_bias="0.969"
            card_view:layout_constraintStart_toEndOf="@+id/destiname"
            card_view:layout_constraintTop_toTopOf="@+id/destiname"
            card_view:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>